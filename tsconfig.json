{
	"compilerOptions": {
		"noEmit": true,
		"lib": ["dom", "ES2022", "DOM.Iterable"],
		"plugins": [
			{
				"name": "ts-lit-plugin",
				"strict": false,
				"rules": {
					"no-missing-import": "error",
					"no-unknown-tag-name": "error",
					"no-unclosed-tag": "error",
					"no-unknown-slot": "warning",
					"no-invalid-css": "off",
					"no-unknown-property": "off",
					"no-unknown-attribute": "off",
					"no-property-visibility-mismatch": "off"
				}
			}
		],
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts"]
}
